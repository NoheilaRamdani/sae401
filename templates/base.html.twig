<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {# Commenté pour Bootstrap CSS, à décommenter si besoin ultérieurement #}
        {# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"> #}
        {# Suppression définitive de Font Awesome #}
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}
        {# Commenté pour Bootstrap JS, à décommenter si besoin ultérieurement #}
        {# <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script> #}
    {% endblock %}
</head>
<body>
<nav>
    <div>
        <div>
            <ul>
                <li>
                    <a href="{{ path('app_home') }}">Accueil</a>
                </li>

                {% if is_granted('ROLE_ADMIN') %}
                    <li>
                        <a href="{{ path('delegate_manage') }}">Gérer les délégués</a>
                    </li>
                    <li>
                        <a href="{{ path('manage_assignments') }}">Gérer les devoirs</a>
                    </li>
                    <li>
                        <a href="{{ path('add_assignment') }}">Ajouter un devoir</a>
                    </li>
                {% elseif is_granted('ROLE_DELEGATE') %}
                    <li>
                        <a href="{{ path('manage_assignments') }}">Gérer les devoirs</a>
                    </li>
                    <li>
                        <a href="{{ path('add_assignment') }}">Ajouter un devoir</a>
                    </li>
                    <li>
                        <a href="{{ path('app_suggestions') }}">Suggestions de modification</a>
                    </li>
                {% endif %}

                {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li>
                        <a href="{{ path('app_register') }}">S'inscrire</a>
                    </li>
                    <li>
                        <a href="{{ path('app_login') }}">Se connecter</a>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('ical_user_feed') }}" target="_blank">Ajouter à mon calendrier</a>
                    </li>
                    <li>
                        <a href="{{ path('app_assignments_history') }}" target="_blank">Historique des rendus</a>
                    </li>
                    <li>
                        <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
<div>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div>
                {{ message }}
                <button type="button">Fermer</button>
            </div>
        {% endfor %}
    {% endfor %}
</div>

{% block body %}{% endblock %}
</body>
</html>