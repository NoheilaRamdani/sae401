{% extends 'base.html.twig' %}

{% block title %}Historique des devoirs{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
    <div>
        <h1>Historique des devoirs</h1>

        <div>
            <form method="get" action="{{ path('assignments_history') }}">
                <div>
                    <select name="subject">
                        <option value="">Toutes les matières</option>
                        {% if subjects is defined and subjects|length > 0 %}
                            {% for subject in subjects %}
                                <option value="{{ subject.id }}" {% if current_subject == subject.id|default('') %}selected{% endif %}>
                                    {{ subject.name }}
                                </option>
                            {% endfor %}
                        {% else %}
                            <option value="">Aucune matière disponible</option>
                        {% endif %}
                    </select>
                    {% if is_delegate_or_admin %}
                        <select name="group">
                            <option value="">Tous les groupes</option>
                            {% if groups is defined and groups|length > 0 %}
                                {% for group in groups %}
                                    <option value="{{ group.id }}" {% if current_group == group.id|default('') %}selected{% endif %}>
                                        {{ group.name }}
                                    </option>
                                {% endfor %}
                            {% else %}
                                <option value="">Aucun groupe disponible</option>
                            {% endif %}
                        </select>
                    {% endif %}
                    <button type="submit">Filtrer</button>
                </div>
            </form>
        </div>

        {% if assignments|length > 0 %}
            {% for assignment in assignments %}
                <div data-id="{{ assignment.id }}">
                    <div style="background-color: {{ assignment.subject.color ?? '#3498db' }}"></div>
                    <div>
                        <strong>{{ assignment.title }}</strong><br>
                        Date limite : {{ assignment.dueDate|date('d/m/Y H:i') }}<br>
                        Ajouté le : {{ assignment.createdAt|date('d/m/Y H:i') }}<br>
                        Matière : {{ assignment.subject.name }}<br>
                        <div>
                            Groupes :
                            {% if assignment.groups|length > 0 %}
                                {% for group in assignment.groups %}
                                    {{ group.name }}{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            {% else %}
                                Aucun groupe
                            {% endif %}
                        </div>
                        Statut : {{ assignment.isCompleted ? 'Terminé' : 'En cours' }}
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <p>Aucun devoir trouvé dans l'historique.</p>
        {% endif %}

        <a href="{{ path('app_home') }}">Retour à l'accueil</a>
    </div>
{% endblock %}