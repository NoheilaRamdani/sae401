{% extends 'base.html.twig' %}

{% block title %}Suggestions en attente{% endblock %}

{% block body %}
    <div class="container">
        <h1>Suggestions en attente</h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        {% if suggestions|length > 0 %}
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Devoir</th>
                    <th>Suggéré par</th>
                    <th>Date</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for suggestion in suggestions %}
                    <tr>
                        <td>{{ suggestion.assignment.title }}</td>
                        <td>{{ suggestion.suggestedBy.email }}</td>
                        <td>{{ suggestion.createdAt|date('d/m/Y H:i') }}</td>
                        <td>
                            <a href="{{ path('review_suggestion', {'id': suggestion.id}) }}" class="btn btn-sm btn-info">Revoir</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Aucune suggestion en attente.</p>
        {% endif %}

        <div class="mt-3">
            <a href="{{ path('app_suggestions') }}" class="btn btn-info">Voir l’historique</a>
            <a href="{{ path('manage_assignments') }}" class="btn btn-secondary">Gérer les devoirs</a>
            <a href="{{ path('app_home') }}" class="btn btn-grey">Retour à l'accueil</a>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .btn-sm {
            margin-right: 5px;
        }
    </style>
{% endblock %}