{% extends 'base.html.twig' %}

{% block title %}Toutes les suggestions{% endblock %}

{% block body %}
    <main class="padding container suggestion">
        <h1>Toutes les suggestions</h1>

        {# Affichage des messages flash #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        {% if suggestions|length > 0 %}
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Devoir</th>
                    <th>Suggéré par</th>
                    <th>Date</th>
                    <th>Statut</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for suggestion in suggestions %}
                    <tr>
                        <td>{{ suggestion.assignment.title }}</td>
                        <td>{{ suggestion.suggestedBy.email }}</td>
                        <td>{{ suggestion.createdAt|date('d/m/Y - H:i') }}</td>
                        <td>
                            {% if suggestion.isProcessed %}
                                <span class="badge bg-success">Traitée</span>
                            {% else %}
                                <span class="badge bg-warning">En attente</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('review_suggestion', {'id': suggestion.id}) }}" class="button">Revoir</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Aucune suggestion trouvée.</p>
        {% endif %}

        <div class="row-start">
            <a href="{{ path('manage_assignments') }}" class="button">Gérer les tâches</a>
            <a href="{{ path('app_home') }}" class="button">Retour à l'accueil</a>
        </div>
    </main>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .btn-sm {
            margin-right: 5px;
        }
        .badge {
            font-size: 0.9em;
        }
    </style>
{% endblock %}