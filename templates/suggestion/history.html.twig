{% extends 'base.html.twig' %}

{% block title %}Historique des suggestions{% endblock %}

{% block body %}
    <div class="container">
        <h1>Historique des suggestions</h1>

        {# Affichage des messages flash #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        {% if suggestions|length > 0 %}
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Devoir</th>
                    <th>Suggéré par</th>
                    <th>Date</th>
                    <th>Statut</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for suggestion in suggestions %}
                    <tr>
                        <td>{{ suggestion.assignment.title }}</td>
                        <td>{{ suggestion.suggestedBy.email }}</td>
                        <td>{{ suggestion.createdAt|date('d/m/Y H:i') }}</td>
                        <td>
                            {% if suggestion.isProcessed %}
                                <span class="badge bg-success">Traitée</span>
                            {% else %}
                                <span class="badge bg-warning">En attente</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('review_suggestion', {'id': suggestion.id}) }}" class="btn btn-sm btn-info">Revoir</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Aucune suggestion trouvée.</p>
        {% endif %}

        <div class="mt-3">
            <a href="{{ path('manage_suggestions') }}" class="btn btn-info">Suggestions en attente</a>
            <a href="{{ path('manage_assignments') }}" class="btn btn-secondary">Gérer les devoirs</a>
            <a href="{{ path('app_home') }}" class="btn btn-grey">Retour à l'accueil</a>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .btn-sm {
            margin-right: 5px;
        }
        .badge {
            font-size: 0.9em;
        }
    </style>
{% endblock %}