{% extends 'base.html.twig' %}

{% block title %}Gestion des devoirs{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
    <div>
        <h1>Gestion des devoirs</h1>

        <a href="{{ path('add_assignment') }}">Ajouter un devoir</a>

        {% if assignments|length > 0 %}
            <table>
                <thead>
                <tr>
                    <th>Titre</th>
                    <th>Date de rendu</th>
                    <th>Créé par</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for assignment in assignments %}
                    <tr>
                        <td>{{ assignment.title }}</td>
                        <td>{{ assignment.getDueDate()|date('d/m/Y H:i') }}</td>
                        <td>{{ assignment.createdBy.userIdentifier }}</td>
                        <td>
                            <a href="{{ path('edit_assignment', {'id': assignment.id}) }}">Modifier</a>
                            <form method="post" action="{{ path('delete_assignment', {'id': assignment.id}) }}" style="display:inline;"
                                  onsubmit="return confirm('Voulez-vous vraiment supprimer ce devoir ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ assignment.id) }}">
                                <button type="submit">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Aucun devoir à gérer pour le moment.</p>
        {% endif %}
    </div>
{% endblock %}