{% extends 'base.html.twig' %}

{% block title %}Gestion des devoirs{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .assignments-list { max-width: 800px; margin: 20px auto; padding: 20px; background-color: #f5f5f5; border-radius: 5px; }
        .assignments-list h1 { font-size: 24px; margin-bottom: 20px; }
        .assignments-list table { width: 100%; border-collapse: collapse; }
        .assignments-list th, .assignments-list td { padding: 10px; text-align: left; border-bottom: 1px solid #ddd; }
        .assignments-list th { background-color: #007bff; color: white; }
        .assignments-list tr:hover { background-color: #e9ecef; }
        .fa-icon { margin-right: 5px; }
        .btn-small { padding: 5px 10px; font-size: 12px; }
    </style>
{% endblock %}

{% block body %}
    <div class="assignments-list">
        <h1><i class="fas fa-tasks fa-icon"></i> Gestion des devoirs</h1>

        <a href="{{ path('add_assignment') }}" class="btn btn-primary mb-3"><i class="fas fa-plus fa-icon"></i> Ajouter un devoir</a>

        {% if assignments|length > 0 %}
            <table>
                <thead>
                <tr>
                    <th>Titre</th>
                    <th>Date de rendu</th>
                    <th>Créé par</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for assignment in assignments %}
                    <tr>
                        <td>{{ assignment.title }}</td>
                        <td>{{ assignment.getDueDate()|date('d/m/Y H:i') }}</td> 
                        <td>{{ assignment.createdBy.userIdentifier }}</td>
                        <td>
                            <a href="{{ path('edit_assignment', {'id': assignment.id}) }}" class="btn btn-small btn-warning">
                                <i class="fas fa-edit fa-icon"></i> Modifier
                            </a>
                            <form method="post" action="{{ path('delete_assignment', {'id': assignment.id}) }}" style="display:inline;"
                                  onsubmit="return confirm('Voulez-vous vraiment supprimer ce devoir ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ assignment.id) }}">
                                <button type="submit" class="btn btn-small btn-danger">
                                    <i class="fas fa-trash fa-icon"></i> Supprimer
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p><i class="fas fa-exclamation-circle fa-icon"></i> Aucun devoir à gérer pour le moment.</p>
        {% endif %}
    </div>
{% endblock %}