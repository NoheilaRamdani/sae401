{% extends 'base.html.twig' %}

{% block title %}Ajouter un devoir{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Ajouter un nouveau devoir</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

        <div class="mb-3">
            {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.title, {'attr': {'class': 'invalid-feedback'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description, {'attr': {'class': 'invalid-feedback'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.due_date, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.due_date, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.due_date, {'attr': {'class': 'invalid-feedback'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.subject, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.subject, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.subject, {'attr': {'class': 'invalid-feedback'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.groups, null, {'label_attr': {'class': 'form-label'}}) }}
            {% for group in form.groups %}
                <div class="form-check">
                    {{ form_widget(group, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(group, null, {'label_attr': {'class': 'form-check-label'}}) }}
                </div>
            {% endfor %}
            {{ form_errors(form.groups, {'attr': {'class': 'invalid-feedback'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.submission_type, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.submission_type, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.submission_type, {'attr': {'class': 'invalid-feedback'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.submission_url, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.submission_url, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.submission_url, {'attr': {'class': 'invalid-feedback'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.type, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.type, {'attr': {'class': 'invalid-feedback'}}) }}
        </div>

        <button type="submit" class="btn btn-primary">Ajouter le devoir</button>
        {{ form_end(form) }}
    </div>
{% endblock %}