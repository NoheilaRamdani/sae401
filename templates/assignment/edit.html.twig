{% extends 'base.html.twig' %}

{% block title %}Modifier un devoir{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-container { max-width: 600px; margin: 20px auto; padding: 20px; background-color: #f5f5f5; border-radius: 5px; }
        .fa-icon { margin-right: 5px; }
    </style>
{% endblock %}

{% block body %}
    <div class="form-container">
        <h1><i class="fas fa-edit fa-icon"></i> Modifier "{{ assignment.title }}"</h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary"><i class="fas fa-save fa-icon"></i> Enregistrer</button>
        <a href="{{ path('manage_assignments') }}" class="btn btn-secondary"><i class="fas fa-arrow-left fa-icon"></i> Retour</a>
        {{ form_end(form) }}
    </div>
{% endblock %}